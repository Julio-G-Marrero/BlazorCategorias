@using Microsoft.AspNetCore.Components.Forms
@using CategoryManager.ViewModels.Models

<EditForm class="edit-form" Model="Model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="field">
        <label class="form-label">Nombre</label>
        <InputText class="input" @bind-Value="Model.Name" />
        <ValidationMessage For="() => Model.Name" />
    </div>

    <div class="field">
        <label class="form-label">Descripción</label>
        <InputText class="input" @bind-Value="Model.Description" />
        <ValidationMessage For="() => Model.Description" />
    </div>

    <div class="actions">
        <button type="button" class="boton" @onclick="OnCancel" disabled="@IsBusy">Cancelar</button>
        <button type="submit" class="btn btn-primary" disabled="@IsBusy">
            @(IsBusy ? "Guardando..." : "Guardar")
        </button>
    </div>
</EditForm>