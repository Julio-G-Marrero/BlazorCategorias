@page "/categories"

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title text-dark m-0">Lista de categorías</h3>
        <button class="btn btn-primary" @onclick="OpenCreateModal">Nueva categoría</button>
    </div>
    <div class="card-body mx-15">
        @if(ViewModel.Categories == null)
        {
            <p>Cargando...</p>
        }
        else if (ViewModel.Categories.Count == 0)
        {
            <p>Sin categorias</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Category in ViewModel.Categories)
                    {
                    <tr @key="Category.Id">
                        <td>@Category.Id</td>
                        <td>@Category.Name</td>
                        <td>@Category.Description</td>
                            <td>
                            @if (Category.IsActive)
                                {
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-success" @onclick="() => {}">
                                            Editar
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => {}">
                                            Desactivar
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Desactivada</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        @if (ShowCreateModel)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title">Nueva categoría</h5>
                                <button type="button" class="btn-close" aria-label="Close" @onclick="CloseCreateModal"></button>
                            </div>

                            <div class="modal-body">
                                <EditForm Model="ActionCategoryViewModel.Category" OnValidSubmit="SubmitCreateAsync">
                                    <DataAnnotationsValidator />

                                    <div class="mb-3">
                                        <label class="form-label">Nombre</label>
                                    <InputText class="form-control" @bind-Value="ActionCategoryViewModel.Category.Name" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Descripción</label>
                                    <InputText class="form-control" @bind-Value="ActionCategoryViewModel.Category.Description" />
                                    </div>

                                    <div class="d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal" disabled="@IsLoading">
                                            Cancelar
                                        </button>

                                        <button type="submit" class="btn btn-primary" disabled="@IsLoading">
                                            @(IsLoading ? "Guardando..." : "Guardar")
                                        </button>
                                    </div>
                                </EditForm>
                            </div>

                        </div>
                    </div>
                </div>
            }
    </div>
</div>